    <script>
        const revealButton = document.getElementById('reveal-button');
        const sectionButtons = document.getElementById('section-buttons');
        const letterButton = document.getElementById('letter-button');
        const pinContainer = document.getElementById('pin-container');
        const pinInput = document.getElementById('pin-input');
        const pinDisplay = document.getElementById('pin-display');
        const cardContainer = document.getElementById('card-container');
        const backToMain = document.getElementById('back-to-main');
        const backToMainFromCard = document.getElementById('back-to-main-from-card');
        const memoriesButton = document.getElementById('memories-button');
        const memoriesSection = document.getElementById('memories-section');
        const backToMainFromMemories = document.getElementById('back-to-main-from-memories');

        const correctPin = '18022021';
        let enteredPin = '';

        revealButton.addEventListener('click', () => {
            revealButton.classList.add('hidden');
            showFireworks();
        });

        letterButton.addEventListener('click', () => {
            sectionButtons.classList.add('hidden');
            pinContainer.classList.remove('hidden');
            setupPinInput();
        });

        backToMain.addEventListener('click', () => {
            pinContainer.classList.add('hidden');
            sectionButtons.classList.remove('hidden');
            enteredPin = '';
            updatePinDisplay();
        });

        backToMainFromCard.addEventListener('click', () => {
            cardContainer.classList.add('hidden');
            sectionButtons.classList.remove('hidden');
        });

        memoriesButton.addEventListener('click', () => {
            sectionButtons.classList.add('hidden');
            memoriesSection.classList.add('active');
        });

        backToMainFromMemories.addEventListener('click', () => {
            memoriesSection.classList.remove('active');
            sectionButtons.classList.remove('hidden');
        });

        function setupPinInput() {
            pinInput.innerHTML = '';
            for (let i = 0; i < 10; i++) {
                const btn = document.createElement('button');
                btn.textContent = i;
                btn.addEventListener('click', () => {
                    if (enteredPin.length < 8) {
                        enteredPin += i;
                        updatePinDisplay();
                        if (enteredPin === correctPin) {
                            pinContainer.classList.add('hidden');
                            cardContainer.classList.remove('hidden');
                        }
                    }
                });
                pinInput.appendChild(btn);
            }
        }

        function updatePinDisplay() {
            pinDisplay.textContent = enteredPin.padEnd(8, 'â€¢');
        }

        // Fireworks Animation
        const createFirework = (x, y) => {
            const firework = document.createElement('div');
            firework.className = 'firework';
            firework.style.left = `${x}px`;
            firework.style.top = `${y}px`;
            document.body.appendChild(firework);

            setTimeout(() => {
                firework.remove();
            }, 2000);
        };

        const showFireworks = () => {
            const interval = setInterval(() => {
                const x = Math.random() * window.innerWidth;
                const y = Math.random() * window.innerHeight;
                createFirework(x, y);
            }, 300);

            setTimeout(() => {
                clearInterval(interval);
                sectionButtons.classList.remove('hidden');
            }, 5000); // Show buttons after 5 seconds
        };
    </script>

    <style>
        .firework {
            position: absolute;
            width: 10px;
            height: 10px;
            background: radial-gradient(circle, rgba(255, 255, 255, 1) 0%, rgba(255, 0, 150, 1) 50%, rgba(0, 0, 0, 0) 70%);
            border-radius: 50%;
            animation: explode 1.5s ease-out forwards;
        }

        @keyframes explode {
            0% {
                transform: scale(0.5);
                opacity: 1;
            }
            100% {
                transform: scale(4);
                opacity: 0;
            }
        }
    </style>
